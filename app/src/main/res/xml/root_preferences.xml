<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Personalization">

        <ListPreference
            android:title="Theme"
            android:key="theme_list"
            android:entries="@array/theme_values"
            android:entryValues="@array/theme_values"
            android:defaultValue="System Default"/>
        <ListPreference
            android:defaultValue="Red"
            android:entries="@array/color_values"
            android:entryValues="@array/color_values"
            android:key="color_list"
            android:title="Color" />

    </PreferenceCategory>

</PreferenceScreen>